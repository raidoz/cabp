#!/usr/bin/make -f

clean:
	rm -Rf debian/.debhelper
	rm -Rf debian/libcabp1
	make clean

build:
	make library

binary:
	mkdir -p debian/libcabp2/usr/local/lib
	cp bin/libCABP.so.2 debian/libcabp2/usr/local/lib/
	dh_makeshlibs
	dh_shlibdeps
	dh_gencontrol
	dh_installdeb
	dh_builddeb

.PHONY: build
.PHONY: clean
